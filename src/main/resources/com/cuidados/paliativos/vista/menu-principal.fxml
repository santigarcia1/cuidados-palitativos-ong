<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="564.0" prefWidth="513.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cuidados.paliativos.controlador.ControladorMenu">

    <!-- Barra lateral -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="10" style="-fx-background-color: #2C3E50;">
            <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10;" text="Menú Principal" />
            <Button onAction="#abrirPacientes" prefWidth="180" text="Pacientes" />
            <Button onAction="#abrirProfesionales" prefWidth="180" text="Profesionales" />
            <Button onAction="#abrirVoluntarios" prefWidth="180" text="Voluntarios" />
            <Button onAction="#abrirPlanes" prefWidth="180" text="Planes de Cuidado" />
            <Button onAction="#abrirDietas" prefWidth="180" text="Dietas" />
            <Button onAction="#abrirMedicamentos" prefWidth="180" text="Medicamentos" />
            <Region VBox.vgrow="ALWAYS" />
            <Button onAction="#cerrarSesion" prefWidth="180" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Cerrar Sesión" />
        </VBox>
    </left>

    <!-- Encabezado -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495E; -fx-padding: 10;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" text="Sistema de Gestión de Cuidados Paliativos" />
        </HBox>
    </top>

    <!-- Panel central dinámico -->
    <center>
        <StackPane fx:id="panelPrincipal" alignment="CENTER" prefHeight="122.0" prefWidth="81.0">
            <Label style="-fx-font-size: 20px;" text="Bienvenido a Manos Abiertas" />
        </StackPane>
    </center>
</BorderPane>
